
@using BWR.Application.Dtos.Company

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header ui-draggable-handle">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
            <h4 class="modal-title">كشف الحوالات المسلمة</h4>
        </div>
        <form method="get" action='@Url.Action("DileveredTransactions","Transaction")'>
            <div class="modal-body">
                <div class="row">
                    <div class="col-lg-12">
                        <label>الشركة المرسلة</label>
                        <select class="form-control" name="companyId" id="dileverdTransactionModelCompanies">
                            <option value="0">الكل</option>
                            @{
                                var companies = (List<CompanyForDropdownDto>)ViewBag.Companies;
                                if (companies != null && companies.Any())
                                {
                                    foreach (var company in companies)
                                    {
                                        <option value="@company.Id">@company.Name</option>
                                    }
                                }
                            }
                            
                        </select>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-6">
                        <label>من تاريخ</label>
                        <input type="date" class="form-control" name="from" />
                    </div>
                    <div class="col-lg-6">
                        <label>إلى تاريخ</label>
                        <input type="date" class="form-control" name="to" />
                    </div>
                </div>

            </div>
            <div class="modal-footer">
                <button type="submit" class="btn green">عرض</button>
                <button type="button" class="btn dark btn-outline" data-dismiss="modal">إلغاء</button>

            </div>
        </form>
    </div>
    <!-- /.modal-content -->
</div>

<script>
    $(function () {
        $('#dileverdTransactionModelCompanies').select2({ width: null });

    });

    
</script>